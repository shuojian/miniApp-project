<view class="page">
<!-- header -->
  <view class='page-hd bg-f'>
    <view class="userinfo ptb-20">
      <button wx:if="{{!authorized}}" 
              open-type="getUserInfo" 
              bind:getuserinfo="onGetUserInfo"> 
        获取头像昵称 
      </button>
      <view wx:if="{{authorized}}">
        <!-- bindtap="accountSet"  -->
        <image 
              class="userinfo-avatar" 
              src="{{userInfo.avatarUrl}}" 
              mode="cover">
        </image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>
    </view>
  </view>
<!-- / header -->

  <view class="page_bd">

    <!-- 我的数据 -->
    <view class="section mt-10">
      <l-list l-class="plr-15"  title="我的数据" bind:lintap="toMyData"/>
      <l-grid l-class="ptb-15" row-num="5" show-col-border="{{true}}">
        <l-grid-item bind:lintap="toMyData"
                    wx:for="{{myDataList}}" 
                    wx:key="{{index}}" 
                    key="{{index}}" 
                    slot="{{index}}">
          <view class="num">{{item.num}}</view>
          <view class="text">{{item.text}}</view>
        </l-grid-item>
      </l-grid>
    </view>
    <!--/ 我的数据 -->

      <!-- 我的列表 -->
      
      <view class="section mt-10 plr-15">
        <l-list  title="我的球队" bind:lintap="toMyTeam" image="/img/tab/me_tab.png"/>
        <l-list  title="我的赛事" bind:lintap="toMyEvent" image="/img/tab/index_tab.png"/>
        <l-list title="我的订单" bind:lintap="toMyOrder" icon="order"/>
      </view>

      <!-- <view class="section mt-10 plr-15">
        <l-list title="我的客服" image="/img/tab/s.png">
        <view slot="right-section"><contact-button type="default-light" size="30" session-from="weapp" class="guest-button">
    </contact-button></view>
    </l-list>
      </view> -->
      
      <!--/ 我的列表 -->
        <view class="section mt-10 p-15 fz-14">
          <l-button special="{{true}}" open-type="share">
            <l-icon name="share" /> <i class="ml-10">分享梦舟</i> 
          </l-button>
          <view class="list-divide"></view>
          <l-button special="{{true}}" open-type="contact">
            <l-icon name="customer-service" color="#3683d6" /><i class="ml-10">客服</i>
          </l-button>
        </view>
  </view>
</view>
