.section{
  background: #fff;
  font-size: 0.8rem;
  line-height: 1.8rem;
  color:#777777;
}
.body{
  padding:30rpx;
  align-items: center;
}
.header{
  border-bottom:1rpx solid #efefef;
}
.footer{
  border-top:1rpx solid #efefef;
}
.header,.footer{
  display: flex;
  line-height: 2.4rem;
  padding:0 30rpx;
}
.header view,.footer view{flex: 1}
.header .right,
.footer .right{text-align: right;}

.main{
  display: flex;
  align-items: center;
  margin:30rpx;
}
.main>view{
  flex:auto;
  text-align: center;
}
.main_day{
  border-top: 6rpx solid #efefef;
}
.main_time{
  font-size: 1.6rem;
  color:rgb(59, 89, 153)
}
.sub{
  line-height: 1.4rem;
  margin-top:50rpx;
}
.sub_title{
  color:#3b5999;
  font-size: 1rem;
  font-weight: 500;
}
.book_info{
  padding-left:30rpx;
  border-left:6rpx solid #efefef;
  margin:20rpx 0 0 0;
}
.label{
  display: inline-block;
  width:4.1rem;
}

