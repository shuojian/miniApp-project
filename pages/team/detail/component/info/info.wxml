<!--pages/team/detail/info/info.wxml-->
 <!-- 球队详情 -->  

<view class='page-bd'>
  <!-- 球队统计 -->
  <view class="cell-title"> <text class='text'>{{team.teamName}}球队统计</text> </view>
  <view class='section'>
      <l-grid l-class="grid-item border-t ptb-10" row-num="4" show-border="{{true}}">
        <l-grid-item key="one" slot="one">
          <view class="grid_label"><i class="num">0</i>场次</view>
        </l-grid-item>
        <l-grid-item key="two" slot="two">
          <view class="grid_label"><i class="num">0</i>胜</view>
        </l-grid-item>
        <l-grid-item key="3" slot="3">
          <view class="grid_label"><i class="num">0</i>平</view>
        </l-grid-item>
        <l-grid-item key="4" slot="4">
          <view class="grid_label"><i class="num">0</i>负</view>
        </l-grid-item> 
        <l-grid-item key="5" slot="5">
          <view class="grid_label"><i class="num">0</i>未录入</view>
        </l-grid-item>
        <l-grid-item key="6" slot="6">
          <view class="grid_label"><i class="num">0</i>选球</view>
        </l-grid-item>
        <l-grid-item key="7" slot="7">
          <view class="grid_label"><i class="num">0</i>失球</view>
        </l-grid-item>
        <l-grid-item key="8" slot="8">
          <view class="grid_label"><i class="num">0</i>净进球</view>
        </l-grid-item> 
      </l-grid> 
    <!-- 个人参数 -->
  </view>
  
  <view class="cell-title"><text class='text'>近期比赛</text></view>
  <view wx:if="{{isEnvent}}" class="color-gray p-base bg-f">{{team.teamName}}</view>
  <view wx:else class="color-gray p-base bg-f">近期无赛事</view>
    
</view>