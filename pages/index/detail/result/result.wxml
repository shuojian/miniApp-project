
<view class='page'>
  <!-- 过滤 -->
  <view class='option'>
    <view class='filter center'>
      <picker 
        bindchange="bindPickerChange" 
        value="{{index}}" 
        range="{{array}}">
        <view class="picker">
          {{array[index]}} <i class="iconfont icon-bottom color-gray fw5 fsz-1a2"></i>
        </view>
      </picker> 
    </view>

    <view class='next'>
      下一轮<i class="iconfont icon-icon_right color-gray fw5 fsz-1a2"></i>
    </view>
  </view>
  <!-- / 过滤 -->
  
  <!-- 对战列表 -->
  <view class="list">
    <navigator url="result/vsdetail/vsdetail" class='item'>
      <view class='item-time'>{{item.time}}</view>
      <view class='item-v'>
        <view class='item-team l '>{{item.time}} <i class="color-reda fw-6 fsz-1a2 mr--5"> 8 :</i></view>
        <view class='item-team r'> <i class="color-reda fw-6 fsz-1a2"> 5 </i> {{item.time}} </view>
      </view>
    </navigator>
  </view> 
  <!-- / 分组赛列表 -->
</view>

