
.container{
  background: #fff;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
  padding:20rpx 30rpx;
  position:relative;
  border-bottom: 1rpx solid #efefef;
}

/* hd */
.item-hd{
  margin-right:.8em;
  width:120rpx;
  height:120rpx;
  line-height:120rpx;
}
.item-hd.sm{
  width:80rpx;
  height:80rpx;
  line-height:80rpx;
}
.item-hd.smx{
  width:60rpx;
  height:60rpx;
  line-height:60rpx;
}
.item-hd image {
  width:100%;
  height:100%;
  vertical-align:top;
}
.circle{border-radius: 50%;}

/* bd */
.item-bd{
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  min-width:0;
  margin-right:20rpx;
}
.item-bd .title{
  font-weight:400;
  font-size:34rpx;
  width:auto;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  word-wrap:break-word;
  word-break:break-all;
}
.list_title{
  font-size: 1em;
  display: flex;
  line-height: 1.4em;
  font-weight:400;
  width:auto;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  word-wrap:break-word;
  word-break:break-all;
}
.item-bd .desc{
  color:#999;
  font-size:26rpx;
  line-height:1.2;
  overflow:hidden;
  text-overflow:ellipsis;
  word-wrap:break-word;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}

/* ft */
.item-ft{
  min-width:40rpx;
  text-align: right;
}



.item{
  width:100%;
  background: #fff;
  min-height:88rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
  color:#333;
  font-size:28rpx;
  border-bottom:1px solid #f3f3f3;
  box-sizing:border-box;

}

.item-left{
  height:88rpx;
  line-height: 88rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
}
.item-right{
  display:flex;
  justify-content:space-between;
  align-items:center;
  line-height:1.2;
  color:#3963bc;
  font-size:26rpx;
}
.iconfont{
  font-family:iconfont;
  font-size:40rpx;
  color:#8c98ae;
  font-style:normal;
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
}


