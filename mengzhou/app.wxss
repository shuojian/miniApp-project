@import 'common/style/weui.wxss';
@import 'common/iconfont/iconfont.wxss';
page{
    background-color: #F8F8F8;
    font-size: 15px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page_hd {padding: 30px;}
.page_bd {padding-bottom: 40px;}
.page_bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page_ft{
    padding-bottom: 10px;
    text-align: center;
}

.page_title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page_desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.fx{display: flex}
.fx.ycenter{align-items: center;}
.fx.xcenter{align-items: center; flex-direction: column}

/*grids*/
.d-grids{overflow:hidden; display: flex; padding:10px 0;}
.d-grids .grid{
    position:relative; padding:0; flex:1; box-sizing:border-box; border-right:1rpx solid #d9d9d9;
  }
  .grid:last-child{border:none;}
  .d-grids.none .grid{border:none;}
.grid_active{background-color:#ececec}
.grid_icon{display:block;width:28px;height:28px;margin:0 auto}
.grid_label{margin-top:5px;display:block;text-align:center;color:#000;font-size:14px;white-space:nowrap;text-overflow:ellipsis;overflow:hidden}


/*base*/
.bg-f,.section{background: #ffffff;} 
.color-primary{color:#3b5999}
.color-sub{color:#B58900}
.color-reda{color:#e83e8c}
.color-red{color:#ff0000}
.color-y{color:#ffff00}
.tip,.color-gray{color:#888}
.tip{font-size:0.8em;}
.bg-gray{background: #aaaaaa; color:#fff}
.xsimg{width:100%; height:150px;}
.border{border-bottom:1px solid #d9d9d9;}
.p{color:#5c5c5c; text-indent: 2em; line-height:1.8em;}

.thumb{width:100%;height:100%;vertical-align:top;}
.circle{border-radius: 50%;}
.square-cir2{border-radius: 2px;}
.square-cir{border-radius: 4px;}

.mt-10,.base-m{margin-top:10rpx}
.mt-20{margin-top:20rpx}
.mt-1{margin-top:1rpx}
.mt--1{margin-top:-1px;}
.mr--1{margin-right:-1px;}
.mr--2{margin-right:-2px;}
.mr--5{margin-right:-5px;}
.ml--1{margin-left:-1px;}
.ml--2{margin-left:-2px;}
.mr-10{margin-right:10px}
.mr-20{margin-right:20px}
.ptb-20{padding-top:20px; padding-bottom:20px}
.ptb-15{padding-top:15px; padding-bottom:15px}
.ptb-10{padding-top:10px; padding-bottom: 10px}
.plr-15{padding-left:15px; padding-right: 15px}
.plr-15{padding-left:10px; padding-right: 10px}
.p-20{padding:20px;}
.p-base{padding:8px 15px;}
.pos-ab{position: absolute }
.pos-fix{position: fixed }
.center{text-align: center;}
.ab-b{bottom:0;}
.ab-b2{bottom:20px;}
.ab-r{right:15px;}
.w-f{width:90%;}
.wh-f{width:100%;height:100%}

.num{color:#3b5999; display: block;}
.block{display: block}
.fsz-1a2{font-size:1.2em; line-height: 1em;}
.fsz-1a5{font-size:1.5em; line-height: 1em;}
.fsz-2{font-size:2em; line-height: 1em;}
.fsz-3{font-size:3em; line-height: 1em;}
.fw-5{font-weight: 500}
.fw-6{font-weight: 600}
.fw-7{font-weight: 700}
.fw-8{font-weight: 800}

.bg-img1{background-image: url("../img/bg-img2.jpg") no-repeat; background-size: contain;}
.bg-img2{background-image: url("../img/bg-img2.jpg")}
.bg-img3{background-image: url("../img/bg-img3.jpg")}
.bg-img4{background-image: url("../img/bg-img4.jpg")}
/*form*/
.formin{flex:3; display: flex;}

/*btn*/
.d-btn-primary{background:#3b5999;color:#ffffff;}
.d-btn-cc-outline-pri{border:1px solid;color:#3b5999; border-radius: 50px;padding:1px 15px; font-size: 0.9em;}
.d-btn-cc-pri{color:#ffffff; background:#3b5999;  border-radius: 50px;padding:1px 15px; font-size: 0.9em;z-index: 999999;}

/*list*/


.cell-title{padding:8px 15px ;}
.cell-title .text{border-left:3px solid #3b5999; padding-left:10px;}
.section-title{color:#3b5999; text-align: center; font-weight: 600; padding:10px 0}

/*tags*/
.tags{margin-top:5px; overflow: hidden;}
.tag{display: inline-block; border:1px solid; padding:1px 3px 0;  margin-right:3px; font-size: 12px; }
.tag.circle{ border-radius:15px; padding:3px 6px 2px;}
.tag.red{ color:#e83e8c}
.tag.primary{color:#3b5999}
.tag.gray{color:#999999; border-color:#dfdfdf;}

.border-t{border-top:1px solid #d9d9d9}

