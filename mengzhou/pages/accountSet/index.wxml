<view class="page">
  <view class="page_bd">

      <view class="section mt-10">
        <view class='weui-cell weui-cell_access'>
          <view class="weui-cell__bd">头像</view>
          <image bindtap="choseImgMethod" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>   
        
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__bd">昵称</view>
          <view bindtap='openAlter'>{{userInfo.nickName}}</view> 
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
      </view>

      <view class="section mt-10">
        <navigator url="realName/realName" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd">实名认证</view>
            未认证
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>

        <view class='weui-cell'>
          <view class='weui-cell__bd'>球衣尺寸</view>
          请选择尺码:
          <picker 
            bindchange="bindPickerChange" 
            value="{{index}}" 
            range="{{array}}">
              <view class="picker">
                {{array[index]}}
              </view>
          </picker>
          <view class='weui-cell__ft weui-cell__ft_in-access'></view>
        </view>

      </view>
       <!--camera
          device-position='back'
          flash="off"
          binderror="error"
          style="width:100%; height:300px;"
        >
        </camera>
        <image mode="widthFix" src="{{src}}"></image>-->
  </view> 
</view>
