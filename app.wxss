/*btn*/
.d-btn-primary{
  background:#3b5999;
  color:#ffffff;}
.d-btn-cc-outline-pri{
  border:1px solid;color:#3b5999; 
  border-radius: 50px;
  padding:1px 15px; 
  font-size: 0.9em;}
.d-btn-cc-pri{
  color:#ffffff; 
  background:#3b5999;  
  border-radius: 50px;
  padding:1px 15px; 
  font-size: 0.9em;
  z-index: 999999;}
.btn-bottom{
  position: fixed ; 
  bottom:30rpx; 
  left:30rpx; 
  right:30rpx; 
  border-radius: 0!important; 
